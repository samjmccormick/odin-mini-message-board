<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Message</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <%- include('header', {username: username}); %>
  <body>
    <div class="container new-message">
      <label for="new-message">New Message</label>
      <form id="new-message" method="post" action="/new">
        <div class="row">
          <label for="user">Username:</label>
          <input type="text" id="user" name="user" placeholder="John Doe" />
        </div>
        <div class="row">
          <label for="text">Message:</label>
          <input type="text" id="text" name="text" placeholder="..." />
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
